<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="pi.mytourguide.activity.CotourismeFragment"
    android:weightSum="100">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:weightSum="30"
        android:layout_weight="30"
        android:gravity="center">

        <TextView
            android:id="@+id/textViewMTG"
            android:layout_alignParentTop="true"
            android:layout_marginTop="70dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="45dp"
            android:text="Welcome ! "
            android:layout_marginBottom="15dp"
            android:textColor="#ff000000" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:weightSum="50"
        android:layout_weight="40"
        android:gravity="center">

        <Button
            android:id="@+id/cotourisme"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="4dp"
            android:background="@color/color4"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="10dp"
            android:paddingTop="3dp"
            android:text="Cotourisme"
            android:textAppearance="?android:attr/textAppearanceLargeInverse" />

        <Button
            android:id="@+id/parcours"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="4dp"
            android:background="@color/color4"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="10dp"
            android:paddingTop="3dp"
            android:text="Parcours PersonnalisÃ© "
            android:textAppearance="?android:attr/textAppearanceLargeInverse" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="30">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView4"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/logomtg" />
    </LinearLayout>

</LinearLayout>